{
  "name": "jinja-lsp",
  "description": "jinja-lsp",
  "license": "MIT",
  "version": "0.1.80",
  "repository": {
    "url": "https://github.com/uros-5/jinja-lsp"
  },
  "icon": "media/icon.png",
  "publisher": "urosmrkobrada",
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "multi-root ready",
    "jinja",
    "minijinja",
    "rust",
    "jinja-lsp",
    "python"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:jinja-html",
    "onLanguage:rust",
    "onLanguage:python"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "jinja-lsp.templates": {
          "type": "string",
          "default": "./templates",
          "description": "Templates directory"
        },
        "jinja-lsp.backend": {
          "type": "array",
          "default": [
            "./src"
          ],
          "description": "Backend directories"
        },
        "jinja-lsp.lang": {
          "type": "string",
          "enum": [
            "rust",
            "python"
          ],
          "default": "rust",
          "description": "Language that is used on backend"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  }
}