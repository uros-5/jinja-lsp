{
  "name": "jinja-lsp",
  "description": "jinja-lsp",
  "license": "MIT",
  "version": "0.1.86",
  "repository": {
    "url": "https://github.com/uros-5/jinja-lsp"
  },
  "icon": "media/icon.png",
  "publisher": "urosmrkobrada",
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "multi-root ready",
    "jinja",
    "minijinja",
    "rust",
    "jinja-lsp",
    "python"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:jinja-html",
    "onLanguage:rust",
    "onLanguage:python"
  ],
  "main": "dist/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "jinja-lsp.templates": {
          "type": "string",
          "description": "Templates directory"
        },
        "jinja-lsp.backend": {
          "type": "array",
          "description": "Backend directories"
        },
        "jinja-lsp.lang": {
          "type": "string",
          "enum": [
            "rust",
            "python"
          ],
          "description": "Language that is used on backend"
        },
        "jinja-lsp.hide_undefined": {
          "type": "boolean",
          "description": "Disable warnings about undefined variables"
        },
        "jinja-lsp.template_extension": {
          "type": "array",
          "default": [
            "html",
            "jinja",
            "j2"
          ],
          "description": "Add custom template extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh",
    "test2": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "0.20.2",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "typescript": "5.3.3"
  }
}